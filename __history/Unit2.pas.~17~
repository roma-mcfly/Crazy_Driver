procedure TFormAutorisation.ButtonEnterClick(Sender: TObject);
begin
  if (trim(EditLogin.Text)<>'') and (trim(EditPassword.Text)<>'') then begin
    ADOQuery1.sql.text:='select count(*) from Users where login=:l and passowrd=:p';
    ADOQuery1.parameters.parambyname('login').value:=EditLogin.Text;
    ADOQuery1.parameters.parambyname('Password').value:=EditPassword.Text; // тут можно прикрутить шифрование что бы не хранить в базе пароль
    ADOQuery1.active:=true;
    if ADOQuery1.recordcount=1 then ... // все хорошо - пара нашлась
    else Showmessage('ќшибка'); // или вообще не нашли, или нашли больше 1 пары
  end else Showmessage('Ќе введены данные');
end;
{var
  LogPass: Array of String;
  i,j,Count: integer;
  Result,Login,Password:string;
begin
  SetLength(LogPass, 800);
  ADODataSet1.Active := True;
  ADODataSet1.First;

  for i := 0 to ADODataSet1.RecordCount - 1 do  //обработка данных логина и парол€ пользовател€
  begin                                         //запись данных в массив
    LogPass[i] := ADODataSet1.FieldValues['UserLogin']+' '+ADODataSet1.FieldValues['UserPassword'];
  ADODataSet1.Next;
  Inc(Count);
  end;


Result:=Trim(EditLogin.Text)+' '+Trim(EditPassword.Text);

  for j := 0 to Count do    //проверка на наличие данных в массиве
  begin
    if Result = logPass[j] then
    begin
    FormGame.ShowModal;
  end
  else
  Label1.Caption:='Wrong Login or Password';
  end;
end}

